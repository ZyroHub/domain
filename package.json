{
	"name": "@zyrohub/domain",
	"version": "0.0.3",
	"author": "DMVMarcio",
	"type": "module",
	"description": "A robust TypeScript library for building Domain Entities and Repositories with built-in dirty checking, reactive state management, and strict type safety.",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
		"dev": "ztsc src/index.ts",
		"test": "vitest run"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ZyroHub/domain.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"typescript",
		"domain-driven-design",
		"ddd",
		"entity",
		"repository",
		"dirty-checking",
		"state-management",
		"clean-architecture"
	],
	"license": "MIT",
	"dependencies": {
		"@zyrohub/utilities": "^1.0.17"
	},
	"devDependencies": {
		"@types/node": "^24.5.2",
		"@zyrohub/config-prettier": "^1.0.1",
		"@zyrohub/ts-runner": "^0.0.3",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.1.2",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.9.2",
		"vitest": "^4.0.14"
	}
}
